<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="ContractsListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Index}">Index</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=CreatedOn}">Created on</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=UpdatedOn}">Updated on</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=IsValid}">Valid</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
